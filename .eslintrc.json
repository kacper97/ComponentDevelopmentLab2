{
    "parser": "babel-eslint",
    "env": {
        "node": true,
        "browser": true
    },
    "extends": "eslint:recommended",
 

    "parserOptions": { 
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true }
         },
    "plugins": [
        "react"
      ],
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "react/jsx-uses-react": "error",
        "react/jsx-uses-vars": "error"
    }
}